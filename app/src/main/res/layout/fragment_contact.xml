<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:paddingTop="8sp">

        <Button
            android:id="@+id/call"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/telpons"
            android:paddingLeft="90sp"
            android:paddingRight="140sp"
            android:text="Phone"
            android:textColor="@color/grey_60"
            android:background="@drawable/gradient2"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8sp">
        <Button
            android:id="@+id/faceb"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="90sp"
            android:paddingRight="130sp"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:text="Facebook"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@drawable/gradient2"
            android:textColor="@color/grey_60"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8sp">
        <Button
            android:id="@+id/mails"
            android:drawableLeft="@drawable/imels"
            android:paddingLeft="90sp"
            android:paddingRight="130sp"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:text="E-mail"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@drawable/gradient2"
            android:textColor="@color/grey_60"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8sp">

        <Button
            android:id="@+id/igeh"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/instagram"
            android:onClick="instagram"
            android:paddingLeft="90sp"
            android:paddingRight="100sp"
            android:text="Instagram"
            android:textColor="@color/grey_60"
            android:background="@drawable/gradient2"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>