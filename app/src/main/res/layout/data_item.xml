<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_nama_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_npm_mhs"
            android:layout_below="@+id/txt_nama_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TextView NoHp Mahasiswa -->
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txt_nohp_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_npm_mhs"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>